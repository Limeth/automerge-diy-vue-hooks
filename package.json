{
  "name": "automerge-diy-vue-hooks",
  "version": "0.4.0",
  "description": "Reactive Vue hooks for Automerge documents",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Limeth/automerge-diy-vue-hooks.git"
  },
  "main": "index.ts",
  "scripts": {
    "type-check": "vue-tsc --build",
    "lint:oxlint": "oxlint . --fix -D correctness --ignore-path .gitignore",
    "lint:eslint": "eslint . --fix",
    "lint": "run-s lint:*",
    "format-check": "prettier --check *.ts",
    "check": "run-s type-check lint format-check",
    "format": "prettier --write *.ts"
  },
  "keywords": [
    "automerge",
    "vue"
  ],
  "author": "Limeth",
  "license": "MIT",
  "//": {
    "cabbages": "^0.2.8"
  },
  "dependencies": {
    "@automerge/automerge-repo": "^2.0.4",
    "vue": "^3.5.17"
  },
  "devDependencies": {
    "@tsconfig/node22": "^22.0.1",
    "@types/node": "^24.0.4",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.5.1",
    "eslint": "^9.22.0",
    "eslint-plugin-oxlint": "^1.3.0",
    "eslint-plugin-vue": "^10.2.0",
    "jiti": "^2.4.2",
    "npm-run-all": "^4.1.5",
    "oxlint": "^0.16.0",
    "prettier": "3.5.3",
    "typescript": "~5.8.0",
    "vue-tsc": "^2.2.8"
  }
}
